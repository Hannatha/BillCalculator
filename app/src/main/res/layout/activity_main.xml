<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount"
            />

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/editamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/inputamount"
            />

        <TextView
            android:id="@+id/paxDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paxnumber"
            />

        <EditText
            android:inputType="number"
            android:id="@+id/editpax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/paxinput"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/svstoggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:textOff="SVS"
            android:textOn="SVS" />

        <ToggleButton
            android:id="@+id/gsttoggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:textOff="GST"
            android:textOn="GST" />
    </LinearLayout>


        <TextView
            android:id="@+id/discountDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discountdisplay"
            />

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/editDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/inputDiscount"
            />
    <TextView
        android:id="@+id/totalDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/totalbillempty"
        />
    <TextView
        android:id="@+id/eachpaymentDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/each_pays"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/splitbtn"
            android:background="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Split"/>

        <Button
            android:id="@+id/resetbtn"
            android:background="@android:color/holo_orange_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset"/>
    </LinearLayout>

</LinearLayout>
